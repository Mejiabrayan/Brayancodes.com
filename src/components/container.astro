---


const { 
  as: Element = 'div', 
  class: className = '', 
  maxWidth = '2xl' 
} = Astro.props;

const containerClass = [
  'container',
  'mx-auto',
  `max-w-${maxWidth}`,
  'flex',
  'flex-col',
  'items-center',
  'justify-center',
  className
].filter(Boolean).join(' ');
---

<Element class={containerClass}>
  <slot />
</Element>