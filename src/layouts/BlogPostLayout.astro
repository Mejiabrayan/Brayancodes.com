---
import '../styles/globals.css';
import Menu from '../components/Menu';
const { frontmatter } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{frontmatter.title}</title>
    <meta name="description" content={frontmatter.description || "Brayan's personal blog and portfolio website. I write about web development, design, and other topics."} />
    <meta name="keywords" content="web development, front-end, full-stack, design, portfolio, blog" />
    <meta name="author" content="Brayan Mejia Cuenca" />
    <meta property="og:title" content={frontmatter.title} />
    <meta property="og:description" content={frontmatter.description || "Brayan's personal blog and portfolio website. I write about web development, design, and other topics."} />
    <meta property="og:url" content={`https://mejiabrayan.dev/blogs/${frontmatter.slug}`} />
    <meta property="og:image" content={frontmatter.image} />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:image" content={frontmatter.image} />
  </head>

  <body class="bg-[#08090B] text-accents-7">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
      <main>
        <article class="prose prose-invert prose-lg max-w-none">
          <header class="mb-8">
            <img
              class="w-full h-64 object-cover rounded-xl mb-6"
              src={frontmatter.image}
              alt={frontmatter.title}
              draggable="false"
              loading="lazy"
            />
            <h1 class="text-3xl font-bold text-white mb-4">{frontmatter.title}</h1>
            <div class="flex items-center text-sm text-accents-6">
              <time datetime={(new Date(frontmatter.date)).toISOString()}>
                {
                  (new Date(frontmatter.date)).toLocaleDateString(undefined, {
                    dateStyle: 'medium',
                    timeZone: 'UTC',
                  })
                }
              </time>
              {frontmatter.tags && (
                <div class="ml-4 flex">
                  {frontmatter.tags.map((tag: any) => (
                    <span class="mr-2 px-2 py-1 bg-accents-8 rounded-full text-xs">{tag}</span>
                  ))}
                </div>
              )}
            </div>
          </header>

          <div class="text-accents-7 prose-headings:text-white prose-a:text-primary-accent prose-strong:text-accents-5 prose-code:text-accents-6 prose-pre:bg-accents-9 prose-blockquote:border-l-primary-accent prose-blockquote:text-accents-6">
            <slot />
          </div>
        </article>
      </main>
    </div>
  </body>
</html>
