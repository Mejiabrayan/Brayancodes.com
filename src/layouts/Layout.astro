---
import '../styles/globals.css';
import { ViewTransitions } from 'astro:transitions';
import Nav from '~/components/Nav.astro';

interface Props {
  title: string;
  description?: string;
  image?: string;
  type?: string;
  canonicalURL?: string;
  keywords?: string;
  author?: string;
  ogDescription?: string;
  twitterHandle?: string;
}

const {
  title,
  description = "Brayan Mejia Cuenca's Portfolio Website",
  image = '/og-image.png',
  type = 'website',
  canonicalURL = Astro.url.href,
  keywords = 'Full-Stack Developer, Self-taught Developer, Web Development, React, Typescript, Javascript, AI',
  author = 'Brayan Mejia Cuenca',
  ogDescription = 'Full-Stack Developer based in the San Francisco Bay Area',
  twitterHandle = '@brayancodes',
} = Astro.props;
---

<!doctype html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <meta name='description' content={description} />
    <meta name='keywords' content={keywords} />
    <meta name='author' content={author} />
    <link rel='canonical' href={canonicalURL} />
    <meta name='color-scheme' content='dark' />
    <meta name='theme-color' content='#08090B' />

    <!-- Open Graph / Facebook -->
    <meta property='og:title' content={title} />
    <meta property='og:description' content={ogDescription} />
    <meta property='og:image' content={image} />
    <meta property='og:type' content={type} />
    <meta property='og:url' content={canonicalURL} />

    <!-- Twitter -->
    <meta property='twitter:card' content='summary_large_image' />
    <meta property='twitter:creator' content={twitterHandle} />
    <meta property='twitter:title' content={title} />
    <meta property='twitter:description' content={ogDescription} />
    <meta property='twitter:image' content={image} />

    <link rel='icon' type='image/x-icon' href='/favicon.ico' />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body class="antialiased bg-black">
    <main class='isolate flex w-full justify-center px-4 relative'>
      <section
        class='flex max-w-screen justify-center min-h-screen flex-col items-center'
      >
        <Nav />
        <slot />
      </section>
    </main>
  </body>
</html>

