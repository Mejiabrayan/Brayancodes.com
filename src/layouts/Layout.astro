---
import MenuComponent from '../components/Menu';
import '../styles/globals.css';
import { ViewTransitions } from 'astro:transitions';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang='en' >
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <meta name='description' content="Brayan Mejia Cuenca's Portfolio - Full-Stack Developer" />

    <meta property='og:title' content={title} />
    <meta property='og:description' content="Full-Stack Developer specializing in intuitive and dynamic web apps" />
    <meta property='og:image' content='/og-image.png' />
    <meta property='og:type' content='website' />
    <meta property='twitter:card' content='summary_large_image' />
    <meta property='twitter:image' content='/og-image.png' />

    <link rel='icon' type='image/x-icon' href='/favicon.ico' />
    <title>{title}</title>

    <ViewTransitions />
  </head>
  <body class="min-h-screen flex flex-col">
    <main class="flex-grow container mx-auto px-4 sm:px-6 lg:px-8 max-w-3xl selection:bg-primary-accent selection:text-black">
      <MenuComponent client:only />

      <slot />
    </main>
  </body>
</html>