---
import Layout from '~/layouts/Layout.astro';
import { ViewTransitions } from 'astro:transitions';
import ShimmerBackground from '~/components/shimmer-background';
import Avatar from '~/assets/profile.jpg';
import { Image } from 'astro:assets';
---

<Layout title='Brayan M. Cuenca | Full-Stack Web Developer'>
  <ViewTransitions />

  <div class='fixed inset-0 -z-10'>
    <ShimmerBackground client:load />
  </div>

  <div
    id='main-content'
    class='relative flex flex-col  text-xl text-primary tracking-tighter'
  >
    <div class="relative w-10 h-10 md:w-20 md:h-20 lg:w-24 lg:h-24">
      <Image
        src={Avatar}
        alt='Brayan Mejia Cuenca'
        width={256}
        height={256}
        class='w-full h-full object-cover rounded-lg grayscale hover:grayscale-0 transition-all duration-500'
        quality={100}
        style={{
          maskImage: 'linear-gradient(to bottom, black 50%, transparent 100%)',
          WebkitMaskImage: 'linear-gradient(to bottom, black 50%, transparent 100%)',
          maskComposite: 'intersect',
          WebkitMaskComposite: 'source-in',
          filter: 'contrast(1.1) brightness(0.9)',
        }}
      />
      <div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent rounded-lg"></div>
    </div>
    <div class='flex flex-col gap-2 text-shine items-start whitespace-pre-line'>
      <h1 class='text-neutral-400 font-[Tobias] italic text-lg md:text-xl lg:text-2xl'>
        Brayan Mejia Cuenca
      </h1>

      <p
        class='max-w-sm md:max-w-2xl lg:max-w-3xl text-base md:text-lg lg:text-xl'
      >
        Self-taught software engineer based in the San Francisco Bay Area.
        Currently working at the intersection of AI, security, UI design, and
        advancing my skills in web development.
      </p>
    </div>

    <div class='mt-4 flex items-center gap-4 text-primary'>
      <a
        href='https://github.com/Mejiabrayan'
        target='_blank'
        class='transition-colors duration-200 hover:text-white'
        aria-label='GitHub Profile'
      >
        <svg
          xmlns='http://www.w3.org/2000/svg'
          width='24'
          height='24'
          viewBox='0 0 24 24'
          fill='none'
          stroke='currentColor'
          stroke-width='1.5'
          stroke-linecap='round'
          stroke-linejoin='round'
          class='lucide lucide-github'
          role='img'
          aria-labelledby='github-title'
        >
          <title id='github-title'>GitHub</title>
          <path
            d='M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4'
          ></path>
          <path d='M9 18c-4.51 2-5-2-7-2'></path>
        </svg>
      </a>
      <a
        href='https://www.linkedin.com/in/brayan-mejia'
        target='_blank'
        class='transition-colors duration-200 hover:text-white'
        aria-label='LinkedIn Profile'
      >
        <svg
          xmlns='http://www.w3.org/2000/svg'
          width='24'
          height='24'
          viewBox='0 0 24 24'
          fill='none'
          stroke='currentColor'
          stroke-width='1.5'
          stroke-linecap='round'
          stroke-linejoin='round'
          class='lucide lucide-linkedin'
          role='img'
          aria-labelledby='linkedin-title'
        >
          <title id='linkedin-title'>LinkedIn</title>
          <path
            d='M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z'
          ></path>
          <rect width='4' height='12' x='2' y='9'></rect>
          <circle cx='4' cy='4' r='2'></circle>
        </svg>
      </a>
      <a
        href='https://x.com/BrayanCodes'
        target='_blank'
        class='transition-colors duration-200 hover:text-white'
        aria-label='X (Twitter) Profile'
      >
        <svg
          xmlns='http://www.w3.org/2000/svg'
          width='22'
          height='22'
          viewBox='0 0 24 24'
          fill='none'
          stroke-width='1.5'
          stroke-linecap='round'
          stroke-linejoin='round'
          color='currentColor'
          class=''
          role='img'
          aria-labelledby='x-title'
        >
          <title id='x-title'>X (Twitter)</title>
          <path
            d='M3 21L10.5484 13.4516M21 3L13.4516 10.5484M13.4516 10.5484L8 3H3L10.5484 13.4516M13.4516 10.5484L21 21H16L10.5484 13.4516'
            stroke='currentColor'></path>
        </svg>
      </a>
    </div>
  </div>
</Layout>
