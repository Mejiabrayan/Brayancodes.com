---
import Layout from '~/layouts/Layout.astro';
import { ViewTransitions } from 'astro:transitions';
import { Image } from 'astro:assets';
import Badge from '~/components/ui/badge.astro';
import minimalistNotes from '~/assets/minimalist-notes.webp';
import rapidDrafts from '~/assets/rapiddrafts.webp';
import avatar from '~/assets/gradient2.png';
import hermesSend from '~/assets/hermes-send.png';
---

<Layout title='Brayan M. Cuenca | Full-Stack Web Developer'>
  <ViewTransitions />
  <Image
    src={avatar}
    alt='Brayan Mejia'
    width={50}
    height={50}
    class='rounded-md mb-6'
    format='webp'
    quality={100}
    loading='eager'
  />
  <div class='flex flex-col gap-3 text-xl text-primary'>
    <h1>I'm a Full-Stack Developer who brings designs to life through code.</h1>
    <div>
      I work at the intersection of UI design, AI, and security, crafting web
      experiences that are both beautiful and secure.
    </div>
    <div>
      Lately, I've been diving deep into cybersecurity, pursuing CompTIA SYS
      701+ while building projects that blend my design and security interests.
    </div>
    <div class='mt-4 flex items-center gap-4 text-primary'>
      <a
        href='https://github.com/Mejiabrayan'
        target='_blank'
        class='transition-colors duration-200 hover:text-white'
        aria-label='GitHub Profile'
      >
        <svg
          xmlns='http://www.w3.org/2000/svg'
          width='24'
          height='24'
          viewBox='0 0 24 24'
          fill='none'
          stroke='currentColor'
          stroke-width='1.5'
          stroke-linecap='round'
          stroke-linejoin='round'
          class='lucide lucide-github'
          role="img"
          aria-labelledby="github-title"
        >
          <title id="github-title">GitHub</title>
          <path
            d='M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4'
          ></path>
          <path d='M9 18c-4.51 2-5-2-7-2'></path>
        </svg>
      </a>
      <a
        href='https://www.linkedin.com/in/brayan-mejia'
        target='_blank'
        class='transition-colors duration-200 hover:text-white'
        aria-label='LinkedIn Profile'
      >
        <svg
          xmlns='http://www.w3.org/2000/svg'
          width='24'
          height='24'
          viewBox='0 0 24 24'
          fill='none'
          stroke='currentColor'
          stroke-width='1.5'
          stroke-linecap='round'
          stroke-linejoin='round'
          class='lucide lucide-linkedin'
          role="img"
          aria-labelledby="linkedin-title"
        >
          <title id="linkedin-title">LinkedIn</title>
          <path
            d='M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z'
          ></path>
          <rect width='4' height='12' x='2' y='9'></rect>
          <circle cx='4' cy='4' r='2'></circle>
        </svg>
      </a>
      <a
        href='https://x.com/BrayanCodes'
        target='_blank'
        class='transition-colors duration-200 hover:text-white'
        aria-label='X (Twitter) Profile'
      >
        <svg
          xmlns='http://www.w3.org/2000/svg'
          width='22'
          height='22'
          viewBox='0 0 24 24'
          fill='none'
          stroke-width='1.5'
          stroke-linecap='round'
          stroke-linejoin='round'
          color='currentColor'
          class=''
          role="img"
          aria-labelledby="x-title"
        >
          <title id="x-title">X (Twitter)</title>
          <path
            d='M3 21L10.5484 13.4516M21 3L13.4516 10.5484M13.4516 10.5484L8 3H3L10.5484 13.4516M13.4516 10.5484L21 21H16L10.5484 13.4516'
            stroke='currentColor'></path>
        </svg>
      </a>
    </div>
  </div>
  <div id='work' class='mt-12 flex flex-col gap-4 text-primary'>
    <div class='mb-4 h-px border-t border-white/10'></div>
    <div class='text-lg'>Work</div>
    <a
      class='group mt-8 text-lg hover:bg-transparent'
      href='https://github.com/Mejiabrayan/hermesSend'
      target='_blank'
    >
      <div class='aspect-video w-full bg-cover rounded-lg bg-transparent'>
        <Image
          src={hermesSend}
          alt='Hermes Send App Preview'
          class='min-h-full min-w-full object-cover transition-transform duration-300 group-hover:scale-105'
          quality={100}
          loading='eager'
          format='webp'
        />
      </div>
      <div class='mt-4 flex items-center justify-between gap-4'>
        <div class='whitespace-nowrap underline-offset-2 group-hover:underline'>
          Hermes Send
        </div>
        <div class='flex gap-2'>
          <Badge text='Project' />
          <Badge text='2024' />
        </div>
      </div>
      <div class='mt-1 text-base leading-tight sm:mt-0 sm:text-lg'>
        A full-stack Next.js app utilzing SES and AWS S3 for sending emails.
      </div>
    </a>
    <a
      class='group mt-8 text-lg hover:bg-transparent'
      href='https://github.com/Mejiabrayan/minimalist-notes'
      target='_blank'
    >
      <div
        class='aspect-video w-full overflow-hidden rounded-lg hover:bg-transparent'
      >
        <Image
          src={minimalistNotes}
          alt='Minimalist Notes App Preview'
          class='min-h-full min-w-full object-cover transition-transform duration-300 group-hover:scale-105'
          quality={100}
          format='webp'
          loading='lazy'
        />
      </div>
      <div class='mt-4 flex items-center justify-between gap-4'>
        <div class='whitespace-nowrap underline-offset-2 group-hover:underline'>
          Minimalist Notes App
        </div>
        <div class='flex gap-2'>
          <Badge text='Project' />
          <Badge text='2024' />
        </div>
      </div>
      <div class='mt-1 text-base leading-tight sm:mt-0 sm:text-lg'>
        A Electron Desktop App for taking notes using tailwind css, zustand,
        jotai, and MDXEditor.
      </div>
    </a>
    <a
      class='group mt-8 text-lg hover:bg-transparent'
      href='https://github.com/Mejiabrayan/RapidDrafts'
      target='_blank'
    >
      <div
        class='aspect-video w-full overflow-hidden rounded-lg bg-transparent'
      >
        <Image
          src={rapidDrafts}
          alt='Minimalist Notes App Preview'
          class='min-h-full min-w-full object-cover transition-transform duration-300 group-hover:scale-105'
          quality={100}
          loading='lazy'
          format='webp'
        />
      </div>
      <div class='mt-4 flex items-center justify-between gap-4'>
        <div class='whitespace-nowrap underline-offset-2 group-hover:underline'>
          Rapid Drafts
        </div>
        <div class='flex gap-2'>
          <Badge text='Project' />
          <Badge text='2023' />
        </div>
      </div>
      <div class='mt-1 text-base leading-tight sm:mt-0 sm:text-lg'>
        An AI-powered writing assistant that helps you draft content using
        OpenAI's GPT-3.5.
      </div>
    </a>
  </div>
</Layout>
